<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="card_catalog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/catalog_image_height</item>
        <item name="android:layout_marginTop">@dimen/margin_top_card_catalog</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_card_catalog</item>
        <item name="cardBackgroundColor">@color/card_catalog_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius_card_catalog</item>
        <item name="cardElevation">@dimen/card_elevation_card_catalog</item>
    </style>

    <style name="card_catalog.left">
        <item name="layout_column">@integer/layout_column_card_catalog_left</item>
        <item name="layout_columnWeight">@integer/layout_column_weight_card_catalog</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start_card_catalog_left</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_end_card_catalog_left</item>
    </style>

    <style name="card_catalog.right">
        <item name="layout_column">@integer/layout_column_card_catalog_right</item>
        <item name="layout_columnWeight">@integer/layout_column_weight_card_catalog</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start_card_catalog_right</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_end_card_catalog_right</item>
    </style>

    <style name="catalog_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>


</resources>
