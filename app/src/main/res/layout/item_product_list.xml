<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemProductList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_margin_top_item_product_list_card"
    android:layout_marginBottom="@dimen/layout_margin_bottom_item_product_list_card"
    android:layout_marginStart="@dimen/layout_margin_start_item_product_list_card"
    android:layout_marginEnd="@dimen/layout_margin_end_item_product_list_card"
    card_view:cardBackgroundColor="@color/item_product_list_card_background"
    card_view:cardCornerRadius="@dimen/item_product_list_card_corner_radius"
    card_view:cardElevation="@dimen/item_product_list_card_corner_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/item_product_list_image_size"
            android:layout_height="@dimen/item_product_list_image_size"
            android:layout_margin="@dimen/item_product_list_image_margin"
            android:contentDescription="@string/product_content_description"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_product_list_brand_margin"
                android:gravity="bottom|start"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_product_list_name_margin"
                android:gravity="top|end"
                android:lineSpacingExtra="@dimen/spacing_extra_item_product_list_name"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:drawableStart="@drawable/ic_baseline_euro_symbol_24px"
                android:drawablePadding="@dimen/drawable_padding_item_product_list_price"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
