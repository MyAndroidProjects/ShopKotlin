<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/product_info_layout_margin_start"
    android:layout_marginTop="@dimen/product_info_layout_margin_top"
    android:layout_marginEnd="@dimen/product_info_layout_margin_end"
    android:layout_marginBottom="@dimen/product_info_layout_margin_bottom"
    card_view:cardBackgroundColor="@color/item_product_list_cart_background"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_corner_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productInfoImage"
            android:layout_width="@dimen/product_info_image_size"
            android:layout_height="@dimen/product_info_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/product_info_image_layout_margin"
            android:contentDescription="@string/content_description_image_of_the_product"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/brandHeader"
            style="@style/labels_product_info"
            android:text="@string/label_brand" />

        <TextView
            android:id="@+id/productInfoBrand"
            style="@style/values_product_info" />

        <TextView
            android:id="@+id/nameHeader"
            style="@style/labels_product_info"
            android:text="@string/label_name" />

        <TextView
            android:id="@+id/productInfoName"
            style="@style/values_product_info" />

        <TextView
            android:id="@+id/featureHeader"
            style="@style/labels_product_info"
            android:text="@string/label_feature" />

        <TextView
            android:id="@+id/productInfoFeature"
            style="@style/values_product_info" />

        <TextView
            android:id="@+id/priceHeader"
            style="@style/labels_product_info"
            android:text="@string/label_price" />

        <TextView
            android:id="@+id/productInfoPrice"
            style="@style/values_product_info"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_baseline_euro_symbol_24px" />
    </LinearLayout>
</android.support.v7.widget.CardView>