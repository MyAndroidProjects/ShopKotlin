<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/layout_margin_start_item_product_list"
    android:layout_marginTop="@dimen/layout_margin_top_item_product_list"
    android:layout_marginEnd="@dimen/layout_margin_end_item_product_list"
    android:layout_marginBottom="@dimen/layout_margin_bottom_item_product_list"
    card_view:cardBackgroundColor="@color/item_product_list_cart_background"
    card_view:cardCornerRadius="@dimen/item_product_list_cart_corner_radius"
    card_view:cardElevation="@dimen/item_product_list_cart_corner_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productInfoImage"
            android:layout_width="@dimen/size_image_product_info"
            android:layout_height="@dimen/size_image_product_info"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/layout_margin_image_product_info"
            android:contentDescription="@string/product_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/brandHeader"
            style="@style/headers_product_info"
            android:text="@string/brand_header" />

        <TextView
            android:id="@+id/productInfoBrand"
            style="@style/values_product_info" />

        <TextView
            android:id="@+id/nameHeader"
            style="@style/headers_product_info"
            android:text="@string/name_header" />

        <TextView
            android:id="@+id/productInfoName"
            style="@style/values_product_info" />

        <TextView
            android:id="@+id/featureHeader"
            style="@style/headers_product_info"
            android:text="@string/feature_header" />

        <TextView
            android:id="@+id/productInfoFeature"
            style="@style/values_product_info" />

        <TextView
            android:id="@+id/priceHeader"
            style="@style/headers_product_info"
            android:text="@string/price_header" />

        <TextView
            android:id="@+id/productInfoPrice"
            style="@style/values_product_info"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_baseline_euro_symbol_24px" />
    </LinearLayout>
</android.support.v7.widget.CardView>